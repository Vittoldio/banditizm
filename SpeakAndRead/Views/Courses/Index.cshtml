@model IEnumerable<SpeakAndRead.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<h1>Courses</h1>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Language)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Language.LanguageName)
                </td>
                <td>
                    @if ((User.IsInRole("Admin")) || (User.IsInRole("Director")))
                    {
                        <div class="btn btn-primary">

                            <a asp-action="Edit" asp-route-id="@item.CourseId" style="color:whitesmoke">Edit</a>
                        </div>

                    }

                    <div class="btn btn-primary">

                        <a asp-action="Details" asp-route-id="@item.CourseId" style="color:whitesmoke">Details</a>
                    </div>

                    @if ((User.IsInRole("Admin")) || (User.IsInRole("Director")))
                    {
                        <div class="btn btn-danger">

                            <a asp-action="Delete" asp-route-id="@item.CourseId" style="color:whitesmoke">Delete</a>
                        </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if ((User.IsInRole("Admin")) || (User.IsInRole("Director")))
{
    <div class="btn btn-primary mb-2 mt-2">

        <a asp-action="Create" style="color:whitesmoke">Create New</a>
    </div>


}
